    font-size: 14px;
}

QDialogButtonBox { dialogbuttonbox-buttons-have-icons: 0; }

/* === QToolTip === */
QToolTip {
    background-color: #EAEBF3;
    border: 1px solid #767676;
    color: #575757;
}

